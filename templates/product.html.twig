{% extends "base.html.twig" %}

{% block body %}
<div class="container pt-4 d-flex flex-column justify-content-center align-items-center">
    <div class="card w-50">
        <p class="card-title card-header text-center"><b>{{product.name}}</b></p>
        <div class="card-body d-flex flex-column align-items-center">
            <img class="img-fluid rounded py-3 w-75 m-auto" src="/img/{{product.picture}}" alt="{{product.name}} afbeelding">
            <p class="border border-danger p-2 rounded">Prijs: {{product.price}} â‚¬</p>
        </div>
        <p class="text-center card-footer m-0">{{product.description}}</p>
    </div>
    <div class="container d-flex flex-column align-items-center pt-5 w-25">
        {{ form_start(form) }}
        {# {{ form_widget(form) }} #}
        {{form_row(form.amount)}}
        <br>
        {{form_row(form.size)}}
        <br>
        {{form_row(form.submit)}}
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}